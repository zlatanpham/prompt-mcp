{
  "name": "@x-mcp/prompt",
  "private": false,
  "version": "1.0.8",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "fastmcp dev src/index.ts",
    "lint": "prettier --check . && eslint . && tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --write . && eslint --fix ."
  },
  "keywords": [
    "mcp"
  ],
  "repository": {
    "url": "https://github.com/zlatanpham/ireader-mcp"
  },
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "prompt-mcp-server": "./dist/index.js"
  },
  "author": "Thanh Pham",
  "license": "MIT",
  "dependencies": {
    "fastmcp": "^1.21.0",
    "zod": "^3.24.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
